{
  "name": "@eth-optimism/integration-test-utils",
  "version": "0.0.1",
  "description": "[Optimism] Optimistic Rollup Integration Test Utils",
  "main": "build/index.js",
  "files": [
    "build/**/*.js"
  ],
  "scripts": {
    "all": "yarn clean && yarn build && yarn wait && yarn test && yarn fix && yarn lint",
    "build": "tsc -p .",
    "clean": "rimraf build/",
    "fix": "prettier --config ../../prettier-config.json --write 'index.ts' 'src/**/*.ts'",
    "lint": "tslint --format stylish --project .",
    "wait": "mocha --require ts-node/register 'test/wait-for-contracts-to-deploy.ts' --timeout 30000 --exit",
    "test": "mocha --require ts-node/register 'test/**/*.spec.ts' --timeout 30000 --exit",
    "ci": "yarn wait && yarn test"
  },
  "keywords": [
    "ethereum",
    "client",
    "optimistic",
    "rollup",
    "test"
  ],
  "homepage": "https://github.com/ethereum-optimism/optimistic-rollup-integration-tests",
  "license": "MIT",
  "author": "Optimism",
  "repository": {
    "type": "git",
    "url": "https://github.com/ethereum-optimism/optimistic-rollup-integration-tests.git"
  },
  "dependencies": {
  },
  "devDependencies": {
    "@types/node": "^12.0.7",
    "chai-as-promised": "^7.1.1",
    "ethereum-waffle": "2.1.0",
    "ethers": "^4.0.45",
    "mocha": "^7.0.1",
    "rimraf": "^2.6.3",
    "ts-node": "^8.2.0",
    "typescript": "^3.5.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
