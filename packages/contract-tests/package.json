{
  "name": "@eth-optimism/contract-tests",
  "version": "0.0.1",
  "description": "[Optimism] Optimistic Rollup Integration Test Suite",
  "main": "build/index.js",
  "files": [
    "build/**/*.js"
  ],
  "scripts": {
    "all": "yarn clean && yarn build && yarn test && yarn fix && yarn lint",
    "build": "yarn run build:contracts",
    "build:contracts": "hardhat compile",
    "clean": "rimraf build/",
    "fix": "prettier --config ../../prettier-config.json --write 'index.ts' '{src,test}/**/*.ts'",
    "lint": "tslint --format stylish --project .",
    "test": "hardhat test --network localhost --show-stack-traces",
    "ci": "yarn test"
  },
  "keywords": [
    "ethereum",
    "client",
    "optimistic",
    "rollup",
    "test"
  ],
  "homepage": "https://github.com/ethereum-optimism/optimistic-rollup-integration-tests",
  "license": "MIT",
  "author": "Optimism",
  "repository": {
    "type": "git",
    "url": "https://github.com/ethereum-optimism/optimistic-rollup-integration-tests.git"
  },
  "dependencies": {
    "@eth-optimism/core-db": "^0.0.1-alpha.30",
    "@eth-optimism/core-utils": "^0.0.1-alpha.30",
    "@eth-optimism/ovm-toolchain": "^0.0.1-alpha.5",
    "@eth-optimism/provider": "^0.0.0-alpha.9",
    "@eth-optimism/rollup-core": "^0.0.1-alpha.28",
    "@ethersproject/address": "^5.0.4",
    "@ethersproject/bytes": "^5.0.4",
    "@ethersproject/contracts": "^5.0.4",
    "@ethersproject/providers": "^5.0.9",
    "@ethersproject/transactions": "^5.0.5",
    "@ethersproject/wallet": "^5.0.4",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "chai": "^4.2.0",
    "ethereum-waffle": "^3.2.0",
    "ethers": "^5.0.19",
    "hardhat": "^2.0.2",
    "mocha": "^8.1.3",
    "typescript": "^4.0.5"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.14.6",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "lodash": "^4.17.20",
    "rimraf": "^2.6.3",
    "ts-node": "^9.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
